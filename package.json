{
  "name": "express-vercel-api",
  "version": "1.0.0",
  "description": "Robust Express API with authentication and user CRUD",
  "main": "dist/api/index.js",
  "packageManager": "yarn@1.22.19",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc && npm run copy-views",
    "copy-views": "node scripts/copy-views.js",
    "start": "node dist/app.js",
    "vercel-build": "tsc && npm run copy-views",
    "vercel-dev": "vercel dev",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "express",
    "typescript",
    "vercel",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2"
  }
}

